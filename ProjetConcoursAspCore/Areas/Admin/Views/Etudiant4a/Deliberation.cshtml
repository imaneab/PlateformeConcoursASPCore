@model ProjetConcoursAspCore.Areas.Admin.ViewModel.Deliberation4ViewModel
@{
    ViewBag.Title = "Deliberation 4eme annees";
}


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant4a/ChoixFiliereCorrection">4ieme année</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> @ViewBag.Title
                        </div>
                        @using (Html.BeginForm("ListDeliberation", "Etudiant4a", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.Label("id", "Filiere", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.DropDownList("id", ViewBag.liste as SelectList, "Selectionner une filiere", new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("NbrPlaces", "Nombre de Places", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.NbrPlaces, new { @class = "form-control", Type = "number", required = "required" })
                                @Html.ValidationMessageFor(model => model.NbrPlaces, "", new { @class = "text-danger", required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("ListeAtt", "Liste d'attente", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.ListeAtt, new { @class = "form-control", Type = "number" })
                                @Html.ValidationMessageFor(model => model.ListeAtt, "", new { @class = "text-danger" })
                            </div>
                        </div>



                    </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>