
@{
    ViewData["Title"] = "Listes et resultats";
}


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            4ieme année
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> @ViewBag.Title
                        </div>
                        @using (Html.BeginForm("DeliberationActions", "Etudiant4a", FormMethod.Post, new { @class = "inline-form" }))
                        {
                            <div class="card-body">
                                @if (ViewBag.Message == "success")
                                {
                                    <div class="alert alert-success"><strong>Notes Sauvegardes !</strong> Vous avez bien enregister les notes des concours.</div>
                                }
                                else if (ViewBag.Message == "error")
                                {
                                    <div class="alert alert-danger"><strong>Formules Errones !</strong> Veuillez reesayer ulterierement.</div>
                                }

                            <div class="form-group">
                                <div class="form-group mx-sm-3 mb-2">
                                    @Html.DropDownList("id", Model as SelectList, "Selectionner une filiere", new { @class = "form-control", required = "required" })
                                </div>
                                
                            </div>

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" name="submit" value="Listes" type="submit">
                                    <i class="fa fa-list"></i> Listes
                                </button>
                                <button class="btn btn-sm btn-success" name="submit" value="Resultats" type="submit">
                                    <i class="fa fa-table"></i> Resultats
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>