
@{
    ViewBag.Title = "Correction par filiere";
}


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant3a/ChoixFiliereCorrection">3ieme année</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> @ViewBag.Title
                        </div>
                        @using (Html.BeginForm("Correction3a", "Etudiant3a", FormMethod.Get, new { @class = "inline-form" }))
                        {
                            <div class="card-body">
                                @if (ViewBag.Message == "success")
                                {
                                    <div class="alert alert-success"><strong>Notes Sauvegardes !</strong> Vous avez bien enregister les notes des concours.</div>
                                }
                                else if (ViewBag.Message == "error")
                                {
                                    <div class="alert alert-danger"><strong>Formules Errones !</strong> Veuillez reesayer ulterierement.</div>
                                }

                                <div class="form-group">
                                    <div class="form-group mx-sm-3 mb-2">
                                        @Html.DropDownList("id", Model as SelectList, "Selectionner une filiere", new { @class = "form-control", required = "required" })
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Afficher les notes
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>