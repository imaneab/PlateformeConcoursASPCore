@model IEnumerable<ProjetConcoursAspCore.Areas.Admin.ViewModel.ListDeliberation3ViewModel>
@{
    ViewBag.Title = "Liste Apres Deliberation";
}


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            3ieme année
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>

    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> @ViewBag.Title des 3 eme Annee
                        </div>
                            <div class="card-body">

                                <div class="table-responsive">


                                    <table id="EmployeeListe" class="table table-striped table-bordered table-hover">

                                        <thead>
                                            <tr>
                                                <th width="40px">Titre</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Bac</th>
                                                <th>S1</th>
                                                <th>S2</th>
                                                <th>S3</th>
                                                <th>S4</th>
                                                <th>Spec</th>
                                                <th>Math</th>
                                                <th>Global</th>
                                                <th>Filiere</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Civilite)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Nom)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Prenom)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.NoteBac)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S1)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S2)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S3)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.S4)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.NoteMath)</td>
                                                    <td>@Html.DisplayFor(e => item.Etudiant.Etudiant.Note.Specialite)</td>
                                                    <td>@Html.DisplayFor(e => item.NoteGlobal)</td>
                                                    <td width="100px">@Html.DisplayFor(e => item.Etudiant.Etudiant.Filiere.Titre)</td>
                                                    <td width="60px">
                                                        @if (item.Etudiant.Etudiant.Etat == "admis")
                                                        {
                                                            <span class="badge badge-success">Admis</span>
                                                        }
                                                        else if (item.Etudiant.Etudiant.Etat == "attente")
                                                        {
                                                            <span class="badge badge-warning">Attente</span>
                                                        }
                                                        else
                                                        { <span class="badge badge-dark">None</span>}
                                                    </td>


                                                </tr>
                                            }

                                        </tbody>
                                    </table>

                                </div>

                            </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>
