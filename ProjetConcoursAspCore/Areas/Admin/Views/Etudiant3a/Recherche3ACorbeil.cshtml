@model IEnumerable<ProjetConcoursAspCore.Models.Etudiant3a>

@section css {
    <style>
        .filter-table .quick {
            margin-left: 0.5em;
            font-size: 0.8em;
            text-decoration: none;
        }

        .fitler-table .quick:hover {
            text-decoration: underline;
        }

        td.alt {
            background-color: #ffc;
            background-color: rgba(255, 255, 0, 0.2);
        }
    </style>
}

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant3a/GetAllCondidatData">3ieme année</a>
        </li>
        <li class="breadcrumb-item active">Recherche Corbeil</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Acceuil
                </a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Paramètres
                </a>
            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> Recherche candidats
                        </div>

                        <div class="card-body">
                            @if (ViewBag.Message == "successRout")
                            {
                                <div class="alert alert-success"><strong>Bien retourné !</strong> Vous avez bien retourner le candidat.</div>
                            }
                            else if (ViewBag.Message == "errorRout")
                            {
                                <div class="alert alert-danger"><strong>Echec !</strong> Veuillez reesayer ulterierement.</div>
                            }
                            else if (ViewBag.Message == "successSup")
                            {
                               <div class="alert alert-success"><strong>Bien supprimé !</strong> Vous avez bien retourner le candidat.</div>
                            }
                            else if (ViewBag.Message == "errorRout")
                            {
                                <div class="alert alert-danger"><strong>Echec !</strong> Veuillez reesayer ulterierement.</div>
                            }
                            <div>

                                <select id="ddlFilterColumns" class="btn btn-secondary dropdown-toggle" style="width:200px">
                                    <option value="">Tous</option>
                                    <option value="2">Nom</option>
                                    <option value="3">Prenom</option>
                                    <option value="4">Cne</option>
                                    <option value="5">Cin</option>
                                    <option value="6">Diplome</option>
                                    <option value="7">Email</option>
                                    <option value="8">Civilite</option>
                                    <option value="9">Nationnalite</option>
                                    <option value="10">Tel</option>
                                    <option value="11">Filiere</option>
                                    <option value="12">N° dossier</option>


                                </select>
                            </div>
                            <br />
                            <div class="table-responsive">
                                <div id="dvTable">

                                    <table id="EmployeeList" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">Supp</th>
                                                <th scope="col">Ret</th>
                                                <th scope="col">Nom</th>
                                                <th scope="col">Prenom</th>
                                                <th scope="col">Cne</th>
                                                <th scope="col">Cin</th>
                                                <th scope="col">Diplome</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Civilite</th>
                                                <th scope="col">Nationnalite</th>
                                                <th scope="col">Tel</th>
                                                <th scope="col">Filiere</th>
                                                <th scope="col">Dossier</th>
                                                <th scope="col">Bac</th>
                                                <th scope="col">S1</th>
                                                <th scope="col">S2</th>
                                                <th scope="col">S3</th>
                                                <th scope="col">S4</th>


                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var emp in Model)
                                            {
                                                <tr>
                                                    <td> @Html.ActionLink(" ", "DeleteC", new { id = emp.ID }, new { @class = "btn btn-danger fa fa-trash-o" })</td>
                                                    <td> @Html.ActionLink(" ", "Retourner", new { id = emp.ID }, new { @class = "btn btn-info fa fa-refresh" })  </td>

                                                    <td>@emp.Etudiant.Nom</td>
                                                    <td>@emp.Etudiant.Prenom</td>
                                                    <td>@emp.Etudiant.Cne</td>
                                                    <td>@emp.Etudiant.Cin</td>
                                                    <td>@emp.Etudiant.Diplome.Titre</td>
                                                    <td>@emp.Etudiant.Email</td>
                                                    <td>@emp.Etudiant.Civilite</td>
                                                    <td>@emp.Etudiant.Nationnalite</td>
                                                    <td>@emp.Etudiant.Tel</td>
                                                    <td>@emp.Etudiant.Filiere.Titre</td>
                                                    <td>@emp.Etudiant.NumDossier</td>
                                                    <td>@emp.Etudiant.Note.NoteBac</td>
                                                    <td>@emp.Etudiant.Note.S1</td>
                                                    <td>@emp.Etudiant.Note.S2</td>
                                                    <td>@emp.Etudiant.Note.S3</td>
                                                    <td>@emp.Etudiant.Note.S4</td>




                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <br />
                            <nav>
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="#">Prev</a>
                                    </li>
                                    <li class="page-item active">
                                        <a class="page-link" href="#">1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">2</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">3</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">4</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>


@section scripts {
    <script src="@Url.Content("~/filtertable/jquery.filtertable.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#EmployeeList').filterTable({ ignoreClass: 'no-filter' });

            $('#ddlFilterColumns').change(function () {
                var index = $(this).val();
                if (index == "")
                    $('#EmployeeList td').removeClass('no-filter');
                else {
                    $('#EmployeeList>tbody>tr>td').addClass('no-filter');
                    $('#EmployeeList>tbody>tr').each(function () {
                        $('td:eq(' + index + ')', this).removeClass('no-filter');
                    });
                }
            });
        });
    </script>
}