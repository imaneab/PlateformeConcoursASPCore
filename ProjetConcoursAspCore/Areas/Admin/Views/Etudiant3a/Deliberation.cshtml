@model ProjetConcoursAspCore.Areas.Admin.ViewModel.DeliberationViewModel
@{
    ViewBag.Title = "Deliberation 3eme annees";
}


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant3a/ChoixFiliereCorrection">3ieme année</a>
        </li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> @ViewBag.Title
                        </div>
                        @using (Html.BeginForm("ListDeliberation", "Etudiant3a", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="card-body">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            @Html.Label("id", "Filiere", new { @class = "control-label" })
                                            <div>
                                                @Html.DropDownList("id", ViewBag.liste as SelectList, "Selectionner une filiere", new { @class = "col-sm-8 form-control", required = "required" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("CoefMath", "Coefficient Math", new { @class = "control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.CoefMath, new { @class = "form-control", Type = "number",min ="1",max="4" })
                                                @Html.ValidationMessageFor(model => model.CoefMath, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("CoefSpec", "Coefficient Spec", new { @class = "control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.CoefSpec, new { @class = "form-control", Type = "number",min ="1",max="4" })
                                                @Html.ValidationMessageFor(model => model.CoefSpec, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("NbrPlaces", "Nombre de Place", new { @class = "control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.NbrPlaces, new { @class = "form-control", Type = "number",min ="1" })
                                                @Html.ValidationMessageFor(model => model.NbrPlaces, "", new { @class = "text-danger",min ="0" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("ListeAtt", "Liste d'attente", new { @class = "control-label" })
                                            <div class="col-sm-8">
                                                @Html.TextBoxFor(model => model.ListeAtt, new { @class = "form-control", Type = "number" })
                                                @Html.ValidationMessageFor(model => model.ListeAtt, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <h5>Classement Par :</h5>
                                        <div class="form-group">
                                            <div class="col-sm">
                                                @Html.DropDownListFor(model => model.Classement1, ViewBag.Classement as List<SelectListItem>, "Selectionner un classement", new { @class = "form-control classement" })
                                                @Html.DropDownListFor(model => model.Classement2, ViewBag.Classement as List<SelectListItem>, "Selectionner un classement", new { @class = "form-control classement" })
                                                @Html.DropDownListFor(model => model.Classement3, ViewBag.Classement as List<SelectListItem>, "Selectionner un classement", new { @class = "form-control classement" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                

                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
    </div>
</main>