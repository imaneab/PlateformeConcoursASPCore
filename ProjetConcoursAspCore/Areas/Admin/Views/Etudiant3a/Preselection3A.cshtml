@model ProjetConcoursAspCore.Areas.Admin.ViewModel.Preselection3aViewModel


<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant3a/GetAllCondidatData">3ieme année</a>
        </li>
        <li class="breadcrumb-item active">Preselection</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Acceuil
                </a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Paramètres
                </a>
            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        @using (Html.BeginForm("Liste", "Etudiant3a", FormMethod.Post, new { @class = "inline-form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger", required = "required" })
                            <div class="card-header">
                                <strong>Preselection</strong>
                                <small>3ieme année</small>
                            </div>

                            <div class="card-body">


                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="name">Filiere</label>
                                            @Html.DropDownList("X", ViewBag.ListFil as SelectList, "Selectionner une filiere", new { @class = "form-control", style = "width:480px", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Filiere, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="ccnumber">Type de diplome</label>
                                            <select class="form-control" id="TypeDiplome" name="TypeDiplome" value="aa" style="width:480px" required>
                                                <option>Selectionner un diplome</option>
                                                <option>DUT</option>
                                                <option>DEUG</option>
                                                <option>DEUST</option>

                                            </select>
                                            @Html.ValidationMessageFor(model => model.TypeDiplome, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="form-group col-sm-1">
                                        <label for="ccmonth">Bac</label>
                                        @Html.TextBoxFor(model => model.Bac, new { @class = "form-control", style = "width:60px", @maxlength = "1", required = "required" })
                                        @Html.ValidationMessageFor(model => model.Bac, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-1">
                                        <label for="ccmonth">S1</label>
                                        @Html.TextBoxFor(model => model.S1, new { @class = "form-control", style = "width:60px", @maxlength = "1", required = "required" })
                                        @Html.ValidationMessageFor(model => model.S1, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-1">
                                        <label for="ccmonth">S2</label>
                                        @Html.TextBoxFor(model => model.S2, new { @class = "form-control", style = "width:60px", @maxlength = "1", required = "required" })
                                        @Html.ValidationMessageFor(model => model.S2, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-1">
                                        <label for="ccmonth">S3</label>
                                        @Html.TextBoxFor(model => model.S3, new { @class = "form-control", style = "width:60px", @maxlength = "1", required = "required" })
                                        @Html.ValidationMessageFor(model => model.S3, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-sm-1">
                                        <label for="ccmonth">S4</label>
                                        @Html.TextBoxFor(model => model.S4, new { @class = "form-control", style = "width:60px", @maxlength = "1", required = "required" })
                                        @Html.ValidationMessageFor(model => model.S4, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!-- /.row-->
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="ccnumber">Note Seuil</label>
                                            @Html.TextBoxFor(model => model.Seuil, new { @class = "form-control", style = "width:480px", @maxlength = "2", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Seuil, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Lancer la selection
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="fa fa-ban"></i> Effacer
                                </button>
                            </div>

                        }
                        </div>
                </div>
            
            </div>
        </div>
    </div>
</main>

