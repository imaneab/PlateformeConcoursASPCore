@model IEnumerable<ProjetConcoursAspCore.Models.Filiere>

<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Acceuil</li>
        <li class="breadcrumb-item">
            <a href="/Admin/Etudiant3a/GetAllCondidatData">Anciens epreuves</a>
        </li>
        <li class="breadcrumb-item active">Liste des epreuves</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>
                <a class="btn" href="./">
                    <i class="icon-graph"></i>  Acceuil
                </a>
                <a class="btn" href="#">
                    <i class="icon-settings"></i>  Paramètres
                </a>
            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fade justify-content-center"></i> Table des anciens épreuves</b>
                        </div>

                        <div class="card-body">
                            <div class="col-xs-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="card-title">
                                            <div class="title"></b></div>
                                        </div>
                                    </div>
                                    <div class="panel-body">


                                        <a href="/Admin/File/AddFile" class="btn btn-success  glyphicon-plus ">Ajouter une épreuve</a>
                                        <br /><br />
                                        <div class="table-responsive">
                                              <div class="table-responsive">

                                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                                    <thead>
                                                        <tr>


                                                            <th>Nom Filiere</th>
                                                            <th>Liste des Anciens Epreuves</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {

                                                            <tr>


                                                                <td>@item.Titre</td>

                                                                <td>

                                                                    @Html.ActionLink("  Liste Epreuves", "ListFilesParFiliere", new { ID = item.ID }, new { @class = " btn btn-primary  fa fa-file" })


                                                                </td>

                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
