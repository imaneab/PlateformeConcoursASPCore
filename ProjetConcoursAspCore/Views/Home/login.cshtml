@model ProjetConcoursAspCore.ViewModel.LoginPageViewModel
@{
    ViewBag.Title = "inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <br />

    <div class="mx-auto col-12 col-md-8 col-lg-4" style="background-color :  #151B54">
        <br />   <h2 class="footer-heading" style="color: #FF8C00 "> Connectez-vous :</h2>

        <h4 class="footer-heading" style="color: white ">  @ViewBag.message </h4>

        <form action="/auth/login" method="post" class="contact-form w-100" id="form">
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center">
                <img src="~/Template_User/images/login.png" height="90" />
            </div>
            <br /><br />
            <input type="hidden" name="ReturnUrl" value="@(Context.Request.Query["ReturnUrl"])"/>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="CIN" name="cin" value="@Model.CNE" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="CNE" name="cne" value="@Model.CIN"  required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="PASSWORD" name="password" required>
            </div> <br />

            <div class="form-group" style="color :  #FF8C00">
                <input type="submit" value="se connecter" class="form-control">
            </div> <br />
            <h4 class="footer-heading" style="color: #FF8C00 "> <a href="/Register/Create"><u>Créer un nouveau compte</u> </a> </h4> <br />
        </form>
        @if(Model.Message != null)
        {
            
            <div class="alert alert-danger">
                @Model.Message
            </div>
            <br/>
        }
    </div> <br />   <br />

