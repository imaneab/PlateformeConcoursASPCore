@model ProjetConcoursAspCore.Models.Etudiant

@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function changetextbox() {
        if (document.getElementById("niveau").value == "3 éme année") {
            document.getElementById("s5").disabled = true;
            document.getElementById("s6").disabled = true;
        }

        else {
            document.getElementById("s5").disabled = false;
            document.getElementById("s6").disabled = false;
        }


    }

</script>
<center style="background-color :  #151B54">

    <br />   <h2 class="footer-heading" style="color: #FF8C00 "> Créer un nouveau compte :</h2> <br />
    <form action="../candidat/creation" method="post" class="contact-form">

        <fieldset>
            <legend style="color: #FF8C00 ">Informations personnels :</legend>
            <br />
            <table cellpadding="15">
