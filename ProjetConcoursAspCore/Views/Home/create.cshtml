                    <td rowspan="3">

                        <div class="form-group">

                            <div style="padding-left:30px">
                                <img src="~/Template_User/images/anonyme.jpg" WIDTH=200 HEIGHT=200 />
                            </div> <br />
                            <div style="padding-left:60px">   <input type="file" name="imagefile" accept="image/png, image/jpeg" style="color:transparent;" onchange="this.style.color = 'black';" /> </div>

                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Nom" name="nom" required>
                        </div>
                    </td>
                    <td>

                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Prénom" name="prenom" required>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="CNE" name="cne" required>
                        </div>
                    </td>

                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="CIN" name="cin" required>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Sexe" name="sexe" required>
