                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="nationalité" name="nationalité" required>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="email" name="email" required>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="téléphone fixe" name="fixe" required>
