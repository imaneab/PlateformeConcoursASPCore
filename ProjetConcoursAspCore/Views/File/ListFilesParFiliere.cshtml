@model IEnumerable<ProjetConcoursAspCore.Models.File>


<main class="main">


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">

                    <div class="panel-body">
                        <div class="table-responsive">

                            <div class="panel-heading"><br/>
                                <h4 class="text-danger"> Table des anciens concours :</h4>
                            </div><br /><br />

                            <div class="panel-body">
                                <div class="table-responsive">



                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">


                                        <tr>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>

                                            <th>
                                                @Html.DisplayNameFor(model => model.Annee)
                                            </th>


                                            <th>
                                                <a class="text-black-50">Lien de Téléchargement</a>
                                            </th>



                                        </tr>


                                        @foreach (var i in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => i.Titre_concours)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => i.Annee)
                                                </td>

                                                <td>

                                                    @Html.ActionLink(i.Name, "Get", "File", new { Id = i.Id }, new { title = "Open PDF document" })


                                                </td>
                                              
                                            </tr>
                                        }

                                    </table>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
