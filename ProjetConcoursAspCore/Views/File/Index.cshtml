@model IEnumerable<ProjetConcoursAspCore.Models.Filiere>
@{
    ViewBag.Title = "Liste des epreuves";
}
<main class="main">
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">

                    <div class="panel-body">

                        <div class="table-responsive">

                            <div class="panel-heading">
                                <h4> Table des anciens concours </h4>
                            </div><br/>



                            <div class="table-responsive">

                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>


                                            <th>Nom Filiere</th>
                                            <th>Liste des Anciens Epreuves</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>


                                                <td>@item.Titre</td>

                                                <td>

                                                    @Html.ActionLink("  Liste Epreuves", "ListFilesParFiliere", new { ID = item.ID }, new { @class = " btn btn-primary  fa fa-file" })


                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
